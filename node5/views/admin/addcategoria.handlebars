{{#each erros}}
	<div class='alert alert-danger'>{{texto}}</div>
	{{else}}
{{/each}}
<h3 class='h3'>Nova Categoria</h3>
<div class="card">
<div class="card-body">
<form class='form-group' action='/admin/categorias/nova' method='POST'>
	<table width="100%">
		<tr>
			<td>
				<input type="text" name='nome' placeholder="Nome:" class='form-control mt-3'>
			</td>
		</tr>
		<tr>
			<td>
				<input type="text" name="slug" placeholder="Slug" class='form-control mt-3'>
			</td>
		</tr>
		<tr>
			<td>
				<button type="submit" class="btn btn-success mt-3">Cadastrar</button>
			</td>
		</tr>
	</table>
</form>
</div>
</div>